generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int @id @default(autoincrement())
  name     String
  password String
  geoPath  GeoPath[]
  todo     TodoItem[]
}

// ------------------------- TODO -------------------------

model TodoItem {
  id          Int     @id @default(autoincrement())
  name        String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  description String
  user        User @relation(fields: [userId], references: [id])
  userId      Int
  done        Boolean @default(false)
}

// ------------------------- GEO PATHS -------------------------

model GeoPath {
  id          Int     @id @default(autoincrement())
  name        String
  cords       GeoCord[]
  user        User @relation(fields: [userId], references: [id])
  userId      Int
}

model GeoCord {
  id          Int     @id @default(autoincrement())
  long        Float
  lat         Float
  path        GeoPath @relation(fields: [pathId], references: [id])
  pathId      Int
}